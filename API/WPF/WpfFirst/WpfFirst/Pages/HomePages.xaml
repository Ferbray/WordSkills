<Page x:Class="WpfFirst.HomePages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFirst"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="HomePages">
    <Grid Background="White">
        <TextBlock FontSize="32" VerticalAlignment="Top" Margin="0,20,0,0" TextAlignment="Center">Меню</TextBlock>
        <Grid Margin="0,120,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Width="350" Height="80" Content="Получить" FontSize="28" Click="Button_Get"></Button>
            <Button Grid.Row="1" Width="350" Height="80" Content="Отправить" FontSize="28" Click="Button_Post"></Button>
            <Button Grid.Row="2" Width="350" Height="80" Content="Редактировать" FontSize="28" Click="Button_Edit"></Button>
            <Button Grid.Row="3" Width="350" Height="80" Content="Удалить" FontSize="28" Click="Button_Delete"></Button>
        </Grid>
    </Grid>
</Page>
