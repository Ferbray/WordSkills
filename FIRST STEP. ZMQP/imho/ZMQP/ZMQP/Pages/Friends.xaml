                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Resources/photo_2022-01-07_17-08-19 (2).jpg" Width="80" Height="80" HorizontalAlignment="Left" Grid.Column="0">
                                <Image.Clip>
                                    <EllipseGeometry Center="40, 40" RadiusX="40" RadiusY="40" />
                                </Image.Clip>
                            </Image>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Foreground="#FFFF2401" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14">Не беспокоить</TextBlock>
                                <Border Width="100" Height="25" Background="#00000000" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="1">
                                    <TextBlock Text="Сообщение" Name="enter" FontFamily="Bahnschrift" Foreground="#FF949494" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="BorderBrush" Value="#FF2205B3"></Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="Red"></Setter>

                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>


                                </Border>
                                <Border Width="100" Height="25" Background="#00000000" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="2">
                                    <TextBlock Text="Действия" FontFamily="Bahnschrift" Foreground="#FF949494" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="BorderBrush" Value="#FF2205B3"></Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="Red"></Setter>

                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>


                                </Border>
                            </Grid>
                        </Grid>
                        <TextBlock Grid.Row="1" FontSize="16" VerticalAlignment="Center" FontFamily="Cascadia Mono" TextWrapping="Wrap" Style="{StaticResource MenuCategory}">Sample Name</TextBlock>
                    </Grid>

