                        </Border>
                        <Border BorderThickness="2,0,2,2" Grid.Column="2" Background="#FFF0F0F0" BorderBrush="#FF676767">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"  Foreground="#FF5B5B5B">$123.456</TextBlock>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="490"/>
                            <ColumnDefinition Width="200"/>
