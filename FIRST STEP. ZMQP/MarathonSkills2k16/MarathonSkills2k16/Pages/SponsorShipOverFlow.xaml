                        <Border BorderThickness="2,0,0,2" Grid.Column="0" Background="#FFF0F0F0" BorderBrush="#FF676767">
                            <Grid Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse Fill="#FFFDB770" Width="80" Height="80"></Ellipse>
                                <TextBlock Foreground="#FFFFE3B1" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center">Logo</TextBlock>
                            </Grid>
                        </Border>
                        <Border BorderThickness="2,0,0,2" Grid.Column="1" Background="#FFF0F0F0" BorderBrush="#FF676767">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24" Foreground="#FF5B5B5B" Margin="20,0,0,0" TextWrapping="Wrap">Наименование благотворительной организации</TextBlock>
                        </Border>
                        <Border BorderThickness="2,0,2,2" Grid.Column="2" Background="#FFF0F0F0" BorderBrush="#FF676767">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"  Foreground="#FF5B5B5B">$123.456</TextBlock>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>   
